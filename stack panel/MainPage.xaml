<phone:PhoneApplicationPage
    x:Class="Stack_Panel.MainPage"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:phone="clr-namespace:Microsoft.Phone.Controls;assembly=Microsoft.Phone"
    xmlns:shell="clr-namespace:Microsoft.Phone.Shell;assembly=Microsoft.Phone"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    FontFamily="{StaticResource PhoneFontFamilyNormal}"
    FontSize="{StaticResource PhoneFontSizeNormal}"
    Foreground="{StaticResource PhoneForegroundBrush}"
    SupportedOrientations="Portrait" Orientation="Portrait"
    shell:SystemTray.IsVisible="True">

    <!-- este contenedor permite apilar elementos vertical y horizontal
    es útil cuando se necesita alinear controles-->
    <StackPanel>
        <!--de manera predeterminada el ordena vetical 
        si deseamos que sea horizontal colocamos Orientation="Horizontal"-->
        <Rectangle
            Width="300"
            Height="300"
            Fill="AliceBlue"  />
            
        <Rectangle
            Width="300"
            Height="300"
            Fill="Beige" />
    </StackPanel>
</phone:PhoneApplicationPage>